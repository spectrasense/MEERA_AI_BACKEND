{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd server && npm install",
    "nixpacks": {
      "node": {
        "version": "18.x"
      }
    }
  },
  "deploy": {
    "startCommand": "cd server && npm run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 